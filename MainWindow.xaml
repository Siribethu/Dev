<Window x:Class="DatalogToolMarken.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Datalog Tool Marken" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top Controls -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom Controls -->
            <RowDefinition Height="Auto"/>
            <!-- StatusBar -->
        </Grid.RowDefinitions>

        <!-- ðŸ”¹ Top Controls -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" VerticalAlignment="Center">
            <ComboBox x:Name="comboBoxPorts" Width="150" Margin="5"/>
            <Button x:Name="buttonRefreshPorts" Content="Refresh Ports" Width="110" Margin="5" Click="buttonRefreshPorts_Click"/>
            <Button x:Name="buttonSerial" Content="Connect" Width="110" Margin="5" Click="buttonSerial_Click"/>
            <DatePicker x:Name="datePicker" Width="140" Margin="5"/>
            <Button x:Name="buttonDownload" Content="Download Data" Width="120" Margin="5" Click="buttonDownload_Click"/>
        </StackPanel>

        <!-- ðŸ”¹ DataGrid -->
        <DataGrid x:Name="dataGridCsv" Grid.Row="1" Margin="10" AutoGenerateColumns="True" IsReadOnly="True" />

        <!-- ðŸ”¹ Bottom Controls -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="buttonSaveCsv" Content="Save CSV" Width="90" Margin="5" Click="SaveCSV_Click"/>
            <Button x:Name="buttonSavePdf" Content="Save PDF" Width="90" Margin="5" Click="SavePDF_Click"/>
            <Button x:Name="buttonSaveExcel" Content="Save Excel" Width="90" Margin="5" Click="SaveExcel_Click"/>
            <Button x:Name="buttonSubmit" Content="Submit" Width="90" Margin="5" Click="Submit_Click"/>
        </StackPanel>

        <!-- ðŸ”¹ Status Bar -->
        <StatusBar Grid.Row="3" Margin="5">
            <StatusBarItem>
                <TextBlock x:Name="textBlockStatus" Text="Ready" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="textBlockUsbPath" Text="No USB detected" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
